---
layout: layouts/base.njk
templateClass: tmpl-post
extraCSS: /css/blog.css
---

{# Run only if a header image has been specified #}
{% if header %}
  <section class="section-header-image wow fadeIn">

    {# Generate <picture> tags for gulpfile preprocessed images #}
    <div class="header-image-wrapper {{ headerImageModeClass }}" style="background-image: url({{ header|bgimage }});{% if headerImageBackgroundColor %}backgrond-color: {{headerImageBackgroundColor}} {% endif %}">

      <div class="header-text">
        <div class="container">
          
          <h1 class="mb-4">
            {{ title }}
          </h1>

          <p class="lead">
            {{ description }}
          </p>
        </div>  
      </div>
    </div>

  </section>
{% endif %}  

<section class="content">
  <div class="container">

    <div class="main-content">
      {{ content | safe }}
    </div>

    <div class="about-author">
      {% include "./author.html" %}
    </div>
  </div>
</section>  


